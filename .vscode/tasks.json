{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build release",
            "type": "shell",
            "command": "g++",
            "args": [
                "-march=alderlake",
                "-O3",
                "-D NDEBUG",
                "./Pulse/*.cpp",
                "-o",
                "./Pulse/x64/Release/Pulse.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },

        },
        {
            "label": "build debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-march=alderlake",
                "-D _DEBUG",
                "./Pulse/*.cpp",
                "-o",
                "./Pulse/x64/Debug/Pulse.exe"
            ],
            "group": {
                "kind": "build",
            },
        }        
    ],
}